<script type="text/javascript">
    $(".changeCSS").click(function (e) {
        e.preventDefault();
        var route = $(this).attr("href");
        $("#linkCSS").attr("href", route);
        type = "default";
        if (route.includes("journal")) {
            type = "journal";
        } else if (route.includes("sandstone")) {
            type = "sandstone";
        } else if (route.includes("slate")) {
            type = "slate";
        } else if (route.includes("cyborg")) {
            type = "cyborg";
        }

        jQuery.ajax({
            type: 'POST',
            data: {"type": type},
            url: "{{ path('configurations') }}"
        });
    });
</script>

