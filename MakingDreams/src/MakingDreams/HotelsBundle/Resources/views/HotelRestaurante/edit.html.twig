{% extends '::base.html.twig' %}

{% block body -%}
   <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2>Editar Restaurante/Hotel</h2>

            </div>
            <center>
                <div class="box-content">
                    <table class="table table-bordered table-striped table-condensed">
                        {{ form_start(edit_form)}}
                        {{form_errors(edit_form)}}
                        <tbody>
                            <tr>
                                <th style="width: 200px;"> Nombre Lugar </th>
                                <td>{{form_widget(edit_form.nombre)}}
                                    {{ form_errors(edit_form.nombre) }}</td>
                            </tr>
                            <tr>
                                <th style="width: 200px;"> Direccion </th>
                                <td>{{form_widget(edit_form.direccion)}}
                                    {{ form_errors(edit_form.direccion) }}</td>
                            </tr>
                            <tr>
                                <th style="width: 200px;"> Servicios </th>
                                <td>{{form_widget(edit_form.servicios)}}
                                    {{ form_errors(edit_form.servicios) }}</td>
                            </tr>
                            <tr>
                                <th style="width: 200px;"> Tipo </th>
                                <td>{{form_widget(edit_form.tipo)}}
                                    {{ form_errors(edit_form.tipo) }}</td>
                            </tr>
                            <tr>
                                <th style="width: 200px;"> Direccion mapa </th>
                                <td>{{form_widget(edit_form.direccionMapa)}}
                                    {{ form_errors(edit_form.direccionMapa) }}</td>
                            </tr>
                            <tr>
                                <th style="width: 200px;"> Provincia </th>
                                <td>{{form_widget(edit_form.provincia)}}
                                    {{ form_errors(edit_form.provincia) }}</td>
                            </tr>
                            <tr>
                                <th style="width: 200px;"> Destino asociado </th>
                                <td>{{form_widget(edit_form.destinoAsociado)}}
                                    {{ form_errors(edit_form.destinoAsociado) }}</td>
                            </tr>
                        </tbody>

                    </table>
                </div>
                
                  <table>
                    <tr>

                        <td> {{form_widget(edit_form.submit)}}
                        <br></td>


                        {{ form_end(edit_form)}}
                        <td>  <a href="{{ path('hotelrestaurante') }}" class="btn btn-primary">
                                Volver
                            </a>
                        <br></td>
                        {{ form_start(delete_form)}}
                        <td>
                            
                            {{ form_widget(delete_form.submit) }}
                        <br></td>
                    
                        {{ form_end(delete_form)}}

                    </tr>
                </table>
            </center>  
        </div>
      </div><br>             
{% endblock %}
