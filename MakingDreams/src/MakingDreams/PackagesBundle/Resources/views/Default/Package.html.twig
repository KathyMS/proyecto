{% extends app.request.isXmlHttpRequest ? '::ajax.html.twig' : 'PackagesBundle:Default:Template.html.twig' %}
{% block container %}
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <h3 class="col-lg-2 control-label">Nombre</h3>
            <div class="col-lg-5">
                <input type="text" class="form-control" id="" placeholder="Nombre" disabled="true">
            </div>
        </div>
        <div class="form-group">
            <div class="form-horizontal">
                <label class="col-lg-2 control-label">Lugar</label>
                <div class="col-lg-4">
                    <input type="text" class="form-control" placeholder="Lugar" disabled="true">
                </div>
            </div>
            <div class="form-horizontal">
                <label class="col-lg-2 control-label">Precio</label>
                <div class="col-lg-4">
                    <input type="number" class="form-control" placeholder="Precio" disabled="true">
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label">Descripci√≥n</label>
            <div class="col-lg-10">
                <textarea class="form-control" rows="3" disabled="true"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="form-horizontal">
                <label class="col-lg-2 control-label">Hotel</label>
                <div class="col-lg-4">
                    <input type="text" class="form-control" placeholder="Hotel" disabled="true">
                </div>
            </div>
            <div class="form-horizontal">
                <label class="col-lg-2 control-label">Restaurante</label>
                <div class="col-lg-4">
                    <input type="text" class="form-control" placeholder="Restaurante" disabled="true">
                </div>
            </div>
        </div>
        <div class="form-group">
            <center>
                <div class="fileupload fileupload-exists" data-provides="fileupload" data-name="myimage">
                    <div class="fileupload-new thumbnail" style="width: 200px; height: 150px;"><img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&text=no+image" /></div>
                    <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;">
                        <img src="">
                    </div>
                </div>
            </center>
        </div>
        <div class="form-group">
            <center>
                <div class="btn-group" role="group">
                    <div class="btn-group" role="group">
                        <a type="button" class="btn btn-default" href="{{ path('editpackage_page') }}">Editar</a>
                    </div>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-default">Eliminar</button>
                    </div>
                </div>
            </center>
        </div>
    </form>
{% endblock %}