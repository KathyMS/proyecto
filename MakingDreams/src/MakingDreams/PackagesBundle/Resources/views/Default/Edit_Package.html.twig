{% extends app.request.isXmlHttpRequest ? '::ajax.html.twig' : 'PackagesBundle:Default:Template.html.twig' %}
{% block container %}
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <h3 class="col-lg-2 control-label">Nombre</h3>
            <div class="col-lg-5">
                <input type="text" class="form-control" id="" placeholder="Nombre">
            </div>
        </div>
        <div class="form-group">
            <div class="form-horizontal">
                <label class="col-lg-2 control-label">Lugar</label>
                <div class="col-lg-4">
                    <input type="text" class="form-control" placeholder="Lugar">
                </div>
            </div>
            <div class="form-horizontal">
                <label class="col-lg-2 control-label">Precio</label>
                <div class="col-lg-4">
                    <input type="number" class="form-control" placeholder="Precio">
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label">Descripci√≥n</label>
            <div class="col-lg-10">
                <textarea class="form-control" rows="3"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="form-horizontal">
                <label class="col-lg-2 control-label">Hotel</label>
                <div class="col-lg-4">
                    <input type="text" class="form-control" placeholder="Hotel">
                </div>
            </div>
            <div class="form-horizontal">
                <label class="col-lg-2 control-label">Restaurante</label>
                <div class="col-lg-4">
                    <input type="text" class="form-control" placeholder="Restaurante">
                </div>
            </div>
        </div>
        <div class="form-group">
            <center>
                <div class="fileupload fileupload-exists" data-provides="fileupload" data-name="myimage">
