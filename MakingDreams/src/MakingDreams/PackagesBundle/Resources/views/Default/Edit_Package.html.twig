                        <a href="#" class="btn fileupload-exists" data-dismiss="fileupload">Quitar</a>
                    </div>
                </div>
            </center>
        </div>
        <div class="form-group pull-right">
            <div class="col-lg-offset-2 col-lg-10">
                <button type="submit" class="btn">Guardar</button>
            </div>
        </div>
    </form>
{% endblock %}