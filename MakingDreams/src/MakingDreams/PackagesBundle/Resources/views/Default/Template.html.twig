{% extends '::base.html.twig' %}
{% block menu1 %}
    <li class="active"><a href="{{ path('packages_homepage') }}" class="scroll-link">Paquetes</a></li>
    <li><a href="{{ path('restaurants_homepage') }}" class="scroll-link">Restaurantes</a></li>
    <li><a href="{{ path('hotels_homepage') }}" class="scroll-link">Hoteles</a></li>
    <li><a href="{{ path('destinations_homepage') }}" class="scroll-link">Destinos</a></li>
    <li><a href="{{ path('about_homepage') }}" class="scroll-link">Sobre nosotros</a></li>
{% endblock %}
{% block menu2 %} 
    <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="themes"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span><span class="caret"></span></a>
        <ul class="dropdown-menu" aria-labelledby="Temas">
            <li><a href="{{ path('configurations', {'type':'default', 'uri':'packages_homepage'}) }}">Default</a></li>
            <li class="divider"></li>
            <li><a href="{{ path('configurations', {'type':'cyborg', 'uri':'packages_homepage'}) }}">Cyborg</a></li>
            <li><a href="{{ path('configurations', {'type':'journal', 'uri':'packages_homepage'}) }}">Journal</a></li>
            <li><a href="{{ path('configurations', {'type':'sandstone', 'uri':'packages_homepage'}) }}">Sandstone</a></li>
            <li><a href="{{ path('configurations', {'type':'slate', 'uri':'packages_homepage'}) }}">Slate</a></li>
        </ul>
    </li>
{% endblock %}
{% block body %} 
    <section id="packages" class="secPad">
        <div class="container container-fluid">
            <div class="row">
                <div class="col-sm-3 hidden-xs">
                    <!--Affix start-->
                    <div data-spy="affix" class="col-sm-2" data-offset-top="0">
                        <ul class="list-group">
                            <li class="list-group-item">
                                <span class="badge">1</span>
                                <h5 class="list-group-item-heading">Mis paquetes</h5>
                                <a href="{{ path('package_page') }}" class="list-group-item">Coliseo romano</a>
                                <a href="{{ path('newpackage_page') }}" class="list-group-item">Nuevo</a>
                            </li>
                        </ul>
                        <div class="list-group">
                            <a href="{{ path('newpackage_page') }}" class="list-group-item">Crear paquete</a>
                        </div>
                    </div>
                    <!--Affix end-->
                </div>
                <div class="col-sm-9">
                    <!--Content start-->
                    <div class="wrapper">
                        <div class="heading">
                            <!-- Heading -->
                            <div class="text-center">
                                <h2>Paquetes Disponibles</h2>
                                <p>Escoga su paquete</p>
                            </div>
                            <div class="well container col-md-12">
                                <div class="col-md-9 pull-left">
                                    <div class="input-group">
                                        <div class="dropdown input-group-btn">
                                            <button href="#" class="dropdown-toggle btn" data-toggle="dropdown" role="button" aria-expanded="false">Avanzada<span class="caret"></span></button>
                                            <ul class="dropdown-menu" style="min-width:300px" role="menu">
                                                <div>
                                                    <form id="" class="navbar-form navbar-right" role="form">
                                                        <fieldset>
                                                            <div class="control-group">
                                                                <label class="control-label" for="email">Lugar</label>
                                                                <div class="controls row-fluid">
                                                                    <input class="form-control" type="text">
                                                                </div>
                                                            </div>
                                                            <div class="control-group">
                                                                <label class="control-label" for="name">Precio</label>
                                                                <div class="controls row-fluid">
                                                                    <input class="span2" required="required" type="number">
                                                                    <label class="control-label">a</label>
                                                                    <input class="span2" required="required" type="number">
                                                                </div>
                                                            </div>
                                                            <div class="control-group">
                                                                <button type="submit" class="btn btn-primary">Buscar</button>
                                                            </div>
                                                        </fieldset>
                                                    </form>
                                                </div>
                                            </ul>
                                        </div>
                                        <input type="text" class="form-control" placeholder="Nombre">
                                        <span class="input-group-btn">
                                            <button class="btn btn-default" type="button">Buscar</button>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-3 pull-right">
                                    <select class="form-control">
                                        <option value="">Mas popular</option>
                                        <option value="">A-Z</option>
                                        <option value="">Z-A</option>
                                    </select>
                                </div>
                            </div>
                            <div class="container well col-md-12">
                            {% block container %}{% endblock %}
                            <!--Content end-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
