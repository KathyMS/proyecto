{% extends '::base.html.twig' %}
{% block menu %}
    <li><a href="{{ path('paquete') }}" class="scroll-link">Paquetes</a></li>
    <li><a href="{{ path('hotelrestaurante') }}" class="scroll-link">Restaurantes</a></li>
    <li><a href="{{ path('hotelrestaurantehotel') }}" class="scroll-link">Hoteles</a></li>
    <li><a href="{{ path('destino') }}" class="scroll-link">Destinos</a></li>
    <li><a href="{{ path('usuario') }}" class="scroll-link">Usuarios</a></li>
    {% endblock %}
{% block body -%}
     <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2>Editar Usuario</h2>

            </div>
            <center>
                <div class="box-content">
                    <table class="table table-bordered table-striped table-condensed">
                        {{ form_start(edit_form)}}
                        {{form_errors(edit_form)}}
                        <tbody>
                           <tr>
                                <th style="width: 200px;"> Nombre</th>
                                <td>{{form_widget(edit_form.nombre)}}
                                    {{ form_errors(edit_form.nombre) }}</td>
                            </tr>
                            <tr>
                                <th style="width: 200px;"> Apellidos </th>
                                <td>{{form_widget(edit_form.apellidos)}}
                                    {{ form_errors(edit_form.apellidos) }}</td>
                            </tr>
                            <tr>
                                <th style="width: 200px;"> Direccion </th>
                                <td>{{form_widget(edit_form.direccion)}}
                                    {{ form_errors(edit_form.direccion) }}</td>
                            </tr>
                            <tr>
                                <th style="width: 200px;"> Correo </th>
                                <td>{{form_widget(edit_form.correo)}}
                                    {{ form_errors(edit_form.correo) }}</td>
                            </tr>
                            <tr>
                                <th style="width: 200px;"> Contrase√±a </th>
                                <td>{{form_widget(edit_form.contrasena)}}
                                    {{ form_errors(edit_form.contrasena) }}</td>
                            </tr>
                             <tr>
                                <th style="width: 200px;"> Telefono </th>
                                <td>{{form_widget(edit_form.telefono)}}
                                    {{ form_errors(edit_form.telefono) }}</td>
                            </tr>
                             <tr>
                                <th style="width: 200px;"> Tipo </th>
                                <td>{{form_widget(edit_form.tipo)}}
                                    {{ form_errors(edit_form.tipo) }}</td>
                            </tr>
                        </tbody>

                    </table>
                </div>
                
                  <table>
                  <tr>

                        <td> {{form_widget(edit_form.submit)}}
                        <br></td>


                        {{ form_end(edit_form)}}
                        <td>  <a href="{{ path('usuario') }}" class="btn btn-primary">
                                Volver
                            </a>
                        <br></td>
                        {{ form_start(delete_form)}}
                        <td>
                            
                            {{ form_widget(delete_form.submit) }}
                        <br></td>
                    
                        {{ form_end(delete_form)}}

                    </tr>
                </table>
            </center>  
        </div>
      </div><br>      
{% endblock %}
