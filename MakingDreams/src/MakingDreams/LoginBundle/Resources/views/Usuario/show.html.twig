{% extends '::base.html.twig' %}

{% block body -%}
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2>Usuario</h2>
            </div>
            <div class="box-content">
                <table class="table table-bordered table-striped table-condensed">
                    <tbody>
                        <tr>
                            <th style="width: 200px;">Id</th>
                            <td>{{ entity.id }}</td>
                        </tr>
                        <tr>
                            <th style="width: 200px;">Nombre</th>
                            <td>{{ entity.nombre }}</td>
                        </tr>
                        <tr>
                            <th style="width: 200px;">Apellidos</th>
                            <td>{{ entity.apellidos }}</td>
                        </tr>
                        <tr>
                            <th style="width: 200px;">Direccion</th>
                            <td>{{ entity.direccion }}</td>
                        </tr>
                        <tr>
                            <th style="width: 200px;">Correo</th>
                            <td>{{ entity.correo }}</td>
                        </tr>
                        <tr>
                            <th style="width: 200px;">Contrasena</th>
                            <td>{{ entity.contrasena }}</td>
                        </tr>
                        <tr>
                            <th style="width: 200px;">Telefono</th>
                            <td>{{ entity.telefono }}</td>
                        </tr>
                        <tr>
                            <th style="width: 200px;">Tipo</th>
                            {%if entity.tipo == true%}
                                <td> Administrador </td>
                            {%endif%}
                            {%if entity.tipo == false%}
                                <td> Usuario </td>
                            {%endif%}
                        </tr>
                    </tbody>
                </table>
            </div>
            <center>
                <table>

                    <ul class="record_actions">
                        <td>
                            <a href="{{ path('usuario') }}" class="btn btn-primary">
                                Volver
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('usuario_edit', { 'id': entity.id }) }}" class="btn btn-primary">
                                Editar
                            </a>
                        </td>

                        {{ form_start(delete_form)}}
                        <td>      
                            {{ form_widget(delete_form) }} 
                        </td>
                        {{ form_end(delete_form)}}

                    </ul>
                    </td>
                </table><br>
            </center> 
        {% endblock %}
