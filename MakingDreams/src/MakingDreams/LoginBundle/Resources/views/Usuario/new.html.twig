{% extends '::base.html.twig' %}
{% block menu %}
    <li><a href="{{ path('paquete') }}" class="scroll-link">Paquetes</a></li>
    <li><a href="{{ path('hotelrestaurante') }}" class="scroll-link">Restaurantes</a></li>
    <li><a href="{{ path('hotelrestaurantehotel') }}" class="scroll-link">Hoteles</a></li>
    <li><a href="{{ path('destino') }}" class="scroll-link">Destinos</a></li>
    <li><a href="{{ path('usuario') }}" class="scroll-link">Usuarios</a></li>
    {% endblock %}
{% block body -%}
     <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2>Crear Usuario</h2>

            </div>
            <center>
                <div class="box-content">
                    <table class="table table-bordered table-striped table-condensed">
                        {{ form_start(form)}}
                        {{form_errors(form)}}
                        <tbody>
                            <tr>
                                <th style="width: 200px;"> Nombre</th>
                                <td>{{form_widget(form.nombre)}}
                                    {{ form_errors(form.nombre) }}</td>
                            </tr>
                            <tr>
                                <th style="width: 200px;"> Apellidos </th>
                                <td>{{form_widget(form.apellidos)}}
                                    {{ form_errors(form.apellidos) }}</td>
                            </tr>
                            <tr>
                                <th style="width: 200px;"> Direccion </th>
                                <td>{{form_widget(form.direccion)}}
                                    {{ form_errors(form.direccion) }}</td>
                            </tr>
                            <tr>
                                <th style="width: 200px;"> Correo </th>
                                <td>{{form_widget(form.correo)}}
                                    {{ form_errors(form.correo) }}</td>
                            </tr>
                            <tr>
                                <th style="width: 200px;"> Contrase√±a </th>
                                <td>{{form_widget(form.contrasena)}}
                                    {{ form_errors(form.contrasena) }}</td>
                            </tr>
                             <tr>
                                <th style="width: 200px;"> Telefono </th>
                                <td>{{form_widget(form.telefono)}}
                                    {{ form_errors(form.telefono) }}</td>
                            </tr>
                             <tr>
                                <th style="width: 200px;"> Tipo </th>
                                <td>{{form_widget(form.tipo)}}
                                    {{ form_errors(form.tipo) }}</td>
                            </tr>
                        </tbody>

                    </table>
                </div>
                <table>
                    <tr>

                        <td> {{form_widget(form.submit)}}
                        </td>
                        <td> <a href="{{ path('usuario') }}" class="btn btn-primary">
                                Atras
                            </a>
                        </td>

                    </tr>
                </table><br>

                {{ form_end(form)}}
            </center>  
        </div>
    </div>

{% endblock %}
